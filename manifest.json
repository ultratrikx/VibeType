{
    "manifest_version": 3,
    "name": "WebPilot - AI Writing Assistant",
    "version": "1.0.0",
    "description": "AI-powered writing assistant that helps you write better on any website",
    "permissions": ["activeTab", "storage", "scripting", "tabs"],
    "host_permissions": [
        "https://api.openai.com/*",
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "html_parser.js",
                "content_chunker.js",
                "semantic_search.js",
                "content_processor.js",
                "inject_processor.js",
                "content.js"
            ],
            "css": ["styles.css"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "Toggle WebPilot Sidebar"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar.html",
                "sidebar.js",
                "sidebar.css",
                "html_parser.js",
                "content_chunker.js",
                "semantic_search.js",
                "content_processor.js",
                "inject_processor.js"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
